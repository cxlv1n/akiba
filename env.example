# ============================================
# Django Settings
# ============================================

# ОБЯЗАТЕЛЬНО в production! Сгенерируйте уникальный ключ:
# python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
DJANGO_SECRET_KEY=your-secret-key-here

# Режим отладки (True только для разработки!)
DJANGO_DEBUG=False

# Разрешенные хосты (через запятую)
DJANGO_ALLOWED_HOSTS=akibaauto.ru,www.akibaauto.ru,localhost,127.0.0.1

# Доверенные источники для CSRF (в production добавьте ваши домены)
CSRF_TRUSTED_ORIGINS=https://akibaauto.ru,https://www.akibaauto.ru

# ============================================
# Superuser Settings (для create_superuser.py)
# ============================================

DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@akibaauto.com
DJANGO_SUPERUSER_PASSWORD=your-secure-password-here

# ============================================
# Database (опционально, для PostgreSQL)
# ============================================

# DATABASE_URL=postgres://user:password@host:5432/dbname

# ============================================
# Logging
# ============================================

DJANGO_LOG_LEVEL=INFO
